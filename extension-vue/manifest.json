{
  "name": "Minna No Akizuki",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Share the cart for your group",
  "author": "@gpioblink",
  "permissions": [
    "cookies",
    "*://akizukidenshi.com/*",
    "pageCapture",
    "webRequest",
    "identity"
  ],
  "browser_action": {
    "default_title": "Minnna no Akizuki",
    "default_popup": "index.html"
  },
  "sandbox":{
    "pages": [
        "main.html"
    ]
  },
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self';"
}
